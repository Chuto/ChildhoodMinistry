
@{
    ViewBag.Title = "Angular";
}

<h2>Список детсадов</h2>
<div ng-controller="ChildhoodCRUDCtrl">
    <div class="data">
        <table class="table table-hover" ng-cloak>
            <tr>
                <td>Номер детсада</td>
                <td>Адрес</td>
            </tr>
            <tr ng-repeat="childhood in childhoods">
                <td>
                    {{childhood.Number}}
                </td>
                <td>
                    {{childhood.Adress}}
                </td>
                <td>
                    <span ng-click="GetChildrenList(childhood.Number)" class="btn btn-primary">Список детей</span>
                    <span ng-click="EditChildhood(childhood)" class="btn btn-primary">Редактировать</span>
                    <span ng-click="DeleteChildhood(childhood)" class="btn btn-danger">Удалить</span>
                </td>
            </tr>
        </table>
    </div>
    <span ng-click="AddChildhoodDiv()" class="btn btn-default">Добавить детсад</span>
    <div ng-show="divEdit">
        <table class="table" ng-cloak>
            <tr>
                <td>{{Action}} записи</td>
                <td></td>
            </tr>
            <tr>
                <td>
                    Номер детсада
                </td>
                <td>
                    <input type="text" ng-model="childhood.Number" />
                </td>
            </tr>
            <tr>
                <td>
                    Адрес
                </td>
                <td>
                    <input type="text" ng-model="childhood.Adress" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="button" ng-show="save" ng-click="AddChildhood()" class="btn btn-default" value="Сохранить" />
                    <input type="button" ng-show="edit" ng-click="UpdateChildhood()" class="btn btn-default" value="Сохранить" />
                </td>
                <td>
                    <input type="button" ng-click="CancelChildrenList()" class="btn btn-danger" value="Отменить" />
                </td>
            </tr>
        </table>
    </div>

    <div ng-show="divList" ng-cloak>
            <div dir-list-items typeof="list" children="children" childhoodnum="{{childhoodNum}}" f="GetChildrenList"></div>

        <input type="button" ng-click="CancelChildrenList()" class="btn btn-danger" value="Закрыть" />
    </div>
</div>